{
  "name": "nestflix",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prestart": "strict-npm-engines && npm run clean",
    "prebuild": "strict-npm-engines && npm run clean",
    "clean": "rm -rf _site",
    "start:pug": "node build.js",
    "start:stylus": "stylus --watch ./src/css --out ./_site/css",
    "start:server": "http-server _site --silent",
    "start": "concurrently -n stylus,pug,server \"npm run start:stylus\" \"npm run start:pug\" \"npm run start:server\"",
    "build:pug": "PRODUCTION=1 node build.js",
    "build:stylus": "stylus --compress ./src/css --out ./_site/css",
    "build": "npm run build:stylus && npm run build:pug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lynnandtonic/nestflix.git"
  },
  "bugs": {
    "url": "https://github.com/lynnandtonic/nestflix/issues"
  },
  "homepage": "https://github.com/lynnandtonic/nestflix#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=6.14"
  },
  "devDependencies": {
    "any-shell-escape": "^0.1.1",
    "chokidar": "^3.5.2",
    "concurrently": "^6.0.2",
    "ffmpeg-static": "^4.3.0",
    "fs-extra": "^9.1.0",
    "html-minifier": "^4.0.0",
    "http-server": "^0.12.3",
    "image-size": "^1.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^16.5.3",
    "pug": "^3.0.2",
    "sharp": "^0.28.1",
    "strict-npm-engines": "0.0.1",
    "stylus": "^0.54.8"
  }
}
