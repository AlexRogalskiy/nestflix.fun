section.entry.hero
    div.entry-info
        h1 !{title}
        small.meta
            span !{rating}
            span !{runtime}
            span !{tags[0]}, !{tags[1]}
        p !{description}
        blockquote !{quote}
        hr
        small.meta #[strong Cast:] !{starring}
        if director
            small.meta #[strong Director:] !{director}
        small.meta #[strong As seen in:] !{parent} (!{parentYear})
        //- button Details
    div.entry-image
        img(src=image)
        small !{studio}

if still1
    section.list
        h2 Stills
        ul.card-list
            li: img(src=still1)
            li: img(src=still2)
            li: img(src=still3)
            li: img(src=still4)

