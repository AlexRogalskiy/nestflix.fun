section.entry.hero
    div.entry-info
        h1.logo: img(src='/img/_logos/logo-' + slug + '.svg', alt=title)
        small.meta
            span !{rating}
            span !{runtime}
            span !{tags[1]}, !{labels}
        if description
            p !{description}
        if quote
            blockquote !{quote}
        hr
        if starring
            small.meta #[strong Cast:] !{starring}
        if director
            small.meta #[strong Director:] !{director}
        if studio
            small.meta #[strong Studio:] !{studio}
        small.meta #[strong As seen in:] !{parent} (!{parentYear})
            if parent2
                span &nbsp;and !{parent2} (!{parent2Year})
        //- button Details
    div.entry-image
        img(src='/img/' + slug + '.jpg')
        small Â© !{credit}
