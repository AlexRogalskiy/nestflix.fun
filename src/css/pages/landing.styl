/*--------------------------------------------------------------------
* $LANDING
--------------------------------------------------------------------*/

.landing

  .hero
    height: 500px
    margin-bottom: calc(var(--body-padding)*1.5)
    position: relative
    display: flex
    justify-content: center
    align-items: center
    overflow: hidden
    text-shadow: 0 2px 5px black(.5)

    @media screen and (max-width: $bp-md)
      height: 350px
      font-size: 80%

  .hero-image
    width: 100%
    height: 100%
    position: absolute
    left: 0
    top: 0
    z-index: 0
    opacity: .7
    // filter: blur(1px)

    &:after
      content: ''
      width: 100%
      height: 100%
      position: absolute
      left: 0
      top: 0
      background-image: linear-gradient(to top, black(.9) 0, black(.2) 100%)

    img
      width: 100%
      height: 100%
      object-fit: cover

  .hero-info
    max-width: 550px
    margin: 2em var(--body-padding) 0
    font-size: 120%
    text-align: center
    z-index: 2
