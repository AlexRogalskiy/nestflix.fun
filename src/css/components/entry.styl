/*--------------------------------------------------------------------
* $ENTRY INFO
--------------------------------------------------------------------*/

$entry-h = 580px

.entry
  height: 80vh

.detail .hero
  height: 90vh

.entry
  position: relative
  min-height: $entry-h
  background-color: var(--gradient)

  &.hero
    --gradient: $pink-med
  &.feature
    --gradient: $teal
    margin: 2em

  @media screen and (max-width: 750px)
    display: flex
    flex-direction: column-reverse

    .entry-info
      width: 100%

    .entry-image
      width: 100%
      height: 60%
      position: relative
      &:after
        background-image: linear-gradient(to top, var(--gradient) 1%, transparent 40%)

  @media screen and (min-width: 751px)

    .entry-info
      width: 50%
      height: 100%
      font-size: 110%

      p, blockquote, hr
        max-width: 500px

    .entry-image
      width: 70%
      height: 100%
      &:after
        background-image: linear-gradient(to right, var(--gradient) 1%, transparent 40%),
                          repeating-linear-gradient(to right, black(.1),
                                                              black(.1) 2px,
                                                              black(0) 2px,
                                                              black(0) 4px)

  .entry-info
    padding: 2em
    position: relative
    z-index: 2
    display: flex
    flex-direction: column
    justify-content: flex-end

    :last-child
      margin-bottom: 0

  .meta
    & + p
      margin-top: 1em
    & + .meta
      margin-top: .5em
    & > span
      display: inline-block
      &:not(:last-of-type)
        margin-right: .5em
      &:not(:first-of-type):before
        content: '·'
        margin-right: .5em
        display: inline-block

  blockquote
    margin-bottom: 1em
    font-style: italic
    &:before
      content: '“'
    &:after
      content: '”'

  .entry-image
    position: absolute
    top: 0
    right: 0
    z-index: 1

    &:after
      content: ''
      width: 100%
      height: 100%
      position: absolute
      top: 0

    & > div
      width: 100%
      height: 100%
      position: absolute
      top: 0
      right: 0

    img
      object-fit: cover
      width: 100%
      height: 100%
      display: block

    small
      position: absolute
      bottom: .8em
      right: 1em
      text-shadow: 0 1px 10px black(.5)
      font-size: 70%
      font-weight: $font-weight-medium
