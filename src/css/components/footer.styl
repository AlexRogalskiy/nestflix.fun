/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

footer
  padding: var(--body-padding)
  background-color: white(.1)
  font-size: 85%
  @media screen and (max-width: $bp-md)
    margin-top: 2em

  nav
    margin-bottom: 2em
    display: flex
    gap: 1.2em
    align-items: center

    a
      font-weight: $font-weight-normal
      color: inherit

  .nav-home
    width: 100px

  p
    max-width: 400px

    &:last-child
      margin-bottom: 0

  .coffee

    span,
    a
      display: inline-block

    a
      margin-left: 25px
      position: relative

    a:before
      content: ''
      height: 20px
      width: 20px
      left: -25px
      top: 1px
      display: block
      position: absolute
      background: no-repeat url('/img/_icons/coffee.svg') 5px center
      background-size: auto 20px
