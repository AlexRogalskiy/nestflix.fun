/*--------------------------------------------------------------------
* $LIST
--------------------------------------------------------------------*/

.list
  margin: 2em
  margin-bottom: 0

  h2
    text-transform: uppercase
    font-weight: $font-weight-medium
    font-size: 90%

  .card-list
    margin-bottom: 0
    display: grid
    // grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
    grid-template-columns: repeat(4,1fr)
    grid-gap: .3em

  li

    a
      display: block

      img
        width: 100%
        border-radius: 3px

      p
        margin-top: .5em

      :last-child
        margin-bottom: 0

  &.recommend p
    font-size: 90%

