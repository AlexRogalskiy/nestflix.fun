/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h1, h2, h3, p, ul, pre
  margin-bottom: 1.1em

h1, h2, h3
  line-height: 1.3

h1
  margin-bottom: .5em
  font-weight: $font-weight-medium
  @media screen and (max-width: $bp-sm)
    font-size: 1.5em
  @media screen and (min-width: $bp-sm + 1)
    font-size: 1.9em

h2
  font-size: 1.24em
  font-weight: $font-weight-medium

h3
  font-size: 1.1em

em
  font-style: italic

strong
  font-weight: $font-weight-medium

small,
figcaption
  font-size: 70%

a
  text-decoration: none
  color: $gold
  position: relative

  &:hover
    text-decoration: underline

  &:focus:focus-visible
    outline: 2px solid white
    box-shadow: 0 2px 5px black(.1)

  &:focus:not(:focus-visible)
    outline: none

  &:active
    transform: translateY(1px)

hr
  margin: .5em 0 1em
  height: 1px
  background-color: white(.2)
  border: none
